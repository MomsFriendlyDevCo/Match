{
  "name": "@momsfriendlydevco/match",
  "version": "1.0.1",
  "description": "Simple string matching / globbing / RegEx matching",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "build": "node ./scripts/build.js",
    "lint": "eslint lib test",
    "test": "mocha"
  },
  "keywords": [
    "glob",
    "match",
    "string",
    "compare"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MomsFriendlyDevCo/Match.git"
  },
  "bugs": {
    "url": "https://github.com/MomsFriendlyDevCo/Match/issues"
  },
  "homepage": "https://github.com/MomsFriendlyDevCo/Match#readme",
  "author": "Matt Carter <m@ttcarter.com>",
  "license": "MIT",
  "engineStrict": true,
  "engines": {
    "node": ">=16.14.0"
  },
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "default": "./lib/index.js"
    },
    "./*": {
      "browser": "./dist/*.js",
      "default": "./lib/*.js"
    }
  },
  "imports": {
    "#lib/*": "./lib/*.js",
    "#main": "./lib/index.js"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es6": true,
      "mocha": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 13,
      "sourceType": "module"
    }
  },
  "devDependencies": {
    "@momsfriendlydevco/es6": "^1.2.0",
    "chai": "^4.3.7",
    "esbuild": "^0.17.12",
    "esbuild-plugin-globals": "^0.2.0",
    "esbuild-plugin-text-replace": "^1.2.0",
    "eslint": "^8.33.0",
    "mocha": "^10.2.0"
  },
  "dependencies": {
    "picomatch": "^2.3.1"
  }
}
